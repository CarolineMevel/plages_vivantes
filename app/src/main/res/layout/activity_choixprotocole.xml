<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

<TextView
    android:id="@+id/textView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Choisissez votre protocole : "
    android:layout_marginTop="24dp"
    android:layout_marginLeft="24dp"
    android:layout_constraintStart_toStartOf="parent"
    android:layout_constraintTop_toBottomOf="parent"/>

    <Button
        android:id="@+id/alamer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="24dp"
        android:onClick="alamer"
        android:text="Protocole ALAMER" />
</LinearLayout>